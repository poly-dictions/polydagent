# Polydictions API Server Configuration
# Copy this to .env and fill in your values

# =============================================================================
# REQUIRED - Bot & Server
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# REQUIRED - API Keys (NEVER commit real values!)
# =============================================================================
POLYMARKET_BUILDERS_KEY=your_polymarket_builders_api_key
DOME_API_KEY=your_dome_api_key
GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# REQUIRED - Session Security
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=generate_a_secure_random_string_here

# =============================================================================
# SECURITY - CORS Allowed Origins (comma-separated)
# =============================================================================
# Production domains only!
ALLOWED_ORIGINS=https://polydictions.xyz,https://www.polydictions.xyz

# =============================================================================
# SECURITY - Dev Mode (set to 'false' in production!)
# =============================================================================
DEV_MODE=false

# =============================================================================
# OPTIONAL - Solana Token Gating
# =============================================================================
REQUIRED_TOKEN_MINT=iATcGSt9DhJF9ZiJ6dmR153N7bW2G4J9dSSDxWSpump
MIN_TOKEN_BALANCE=3000000

# =============================================================================
# OPTIONAL - Dynamic.xyz (if using JWT auth)
# =============================================================================
DYNAMIC_ENV_ID=ea528e4a-63e9-4d21-97e5-1ff2b8a24a85

# =============================================================================
# OPTIONAL - Server Config
# =============================================================================
PORT=8765
HOST=0.0.0.0
